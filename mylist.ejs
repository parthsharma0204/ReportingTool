                            <td>Fraud</td>
                            <td>
                                <a href="../defaulterinfo/view.ejs" class="action-button">View</a>
                            </td>
                        </tr>
                        <!-- Repeat rows as needed -->
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</body>

</html>
